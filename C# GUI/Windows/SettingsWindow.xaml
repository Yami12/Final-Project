<Window x:Class="Keepers_Automation.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Keepers_Automation"
 xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="200" Width="400"
        >
    <Window.Resources>
        <system:String x:Key="mail">""</system:String>
        <system:String x:Key="Instructions">"kjkkbbk"</system:String>
       
    </Window.Resources>
    <Grid>
        <StackPanel Margin="20"
                    >
            <TextBlock Text="Insert Mail here" Margin="5"/>
            <TextBox x:Name="txtMail" Text="{Binding mail}" Margin="5" Padding="2"/>
            
        </StackPanel>
    </Grid>
</Window>
